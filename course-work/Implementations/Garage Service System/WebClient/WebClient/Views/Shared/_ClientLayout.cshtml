<!DOCTYPE html>
<html lang="bg">

<head>
    <meta charset="utf-8" />
    <title>@ViewData[""] - Garage Web</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-dark text-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-black mb-4">
            <div class="container-fluid">
                <a class="navbar-brand">Garage</a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    
                    </ul>
                    <form asp-controller="Home" asp-action="Index" method="post" class="d-flex">
                        <button type="submit" class="btn btn-outline-light"> Изход</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)

    <footer class="border-top fixed-bottom text-center py-3">
        <small class="text-secondary">&copy; @DateTime.Now.Year - Garage Service Manager</small>
    </footer>
</body>
<style>
    a.sortable-link {
        background: none !important;
        border: none !important;
        color: inherit;
        padding: 0;
        margin: 0;
        font: inherit;
        text-decoration: none;
    }

        a.sortable-link:hover {
            text-decoration: underline;
            color: #007bff;
        }
</style>

</html>
