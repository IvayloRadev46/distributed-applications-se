@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Вход</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-dark text-light d-flex justify-content-center align-items-center vh-100">
    <div class="card bg-secondary p-4" style="min-width: 400px;">
        <h2 class="text-center mb-4">Вход</h2>

        <form asp-action="Index" method="post">
            <div class="mb-3">
                <label class="form-label">Имейл</label>
                <input name="email"  class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Парола</label>
                <input name="password" type="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Вход</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Error</div>
        }
    </div>
</body>
</html>
